<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/librefranklin</item>
    </style>

    <style name="TextTime">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/librefranklin</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="fontFamily">@font/libre_franklin_semi_bold</item>
        <item name="android:fontFamily">@font/libre_franklin_semi_bold</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="ArticleCategory">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/librefranklin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/backgroundLight</item>
    </style>

</resources>